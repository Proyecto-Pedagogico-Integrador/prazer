<div class="container p-4">
    <div class="row" style="position: relative;">

        <span class="text" tabindex="0" data-placement="top" title="Volver" style="display: inline-block">
            <a class="btn btn-outline-success" href="/producto">
                <span class="icon text-dark-50">
                    <i class="fas fa-arrow-left"></i>
                </span>
                <span class="text"></span>
            </a>
        </span>

        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body shadow-lg">
                    <h3 style="text-align: center;">Editar Producto</h3>
                    <br>
                    <form action="/producto/edit/{{producto.id_producto}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" class="form-control" placeholder="nombre"
                                value="{{producto.nombre}}" autofocus
                                   onkeypress="return (event.keyCode >= 65 && event.keyCode <= 90) || (event.keyCode >= 97 && event.keyCode <= 122) || event.keyCode === 32"
                                required>
                        </div>
                        <div class="form-group">
                            <input type="number" name="precio" class="form-control" placeholder="precio" min="1"
                                value="{{producto.precio}}" required>
                        </div>
                        <div class="form-group">
                            <input type="number" name="peso" class="form-control" placeholder="peso" min="1"
                                value="{{producto.peso}}" required>
                        </div>
                        <div class="form-group">
                            <input type="number" name="cantidad" class="form-control" placeholder="cantidad" min="1"
                                value="{{producto.cantidad}}" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>