<head>
    <link rel="stylesheet" href="/img/styles/factura.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
</head>

<div class="container p-4">
    <div class="container2 mt-4 p-3 mb-4 bg-body rounded" style="margin-left: auto; margin-right: auto;">

        <div class="container">
            <span class="text" tabindex="0" data-placement="top" title="Agregar" style="display: inline-block">
                {{#each row}} 
                <a class="btn btn-outline-success" href="/cliente/addFactura/{{cliente}}">
                    <span class="icon text-dark-50">
                        <i class="fas fa-plus"></i>
                    </span>
                    <span class="text"></span>
                </a>
                {{/each}}
            </span>

            <h3 style="display: inline-block; margin-left: 40%">Facturas</h3>
        </div>

        <table id="tablaArticulos" class="table mt-2 table-bordered table-striped">
            <thead class="bg-dark text-white">
                <tr class="text-center">
                    <th>ID FACTURA</th>
                    <th>FECHA</th>
                    <th>IVA</th>
                    <th>TOTAL</th>
                    <th>EMPLEADO</th>
                    <th>ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                {{#each factura}}
                <tr style="text-align: center;">
                    <td>{{id_factura}}</td>
                    <td>{{fecha_factura}}</td>
                    <td>{{iva}}</td>
                    <td>{{total}}</td>
                    <td>{{id_empleado}}</td>
                    <td class="text-center">
                        <span class="text" tabindex="0" data-placement="top" title="Factura" 
                            style="display: inline-block">
                            <a class="btn btn-outline-info" href="/cliente/showFactura" >
                                <span class="icon text-dark-50">
                                    <i class="fas fa-eye"></i>
                                </span>
                                <span class="text"></span>
                            </a>
                        </span> 
                    </td>
                </tr>

                {{else}}

                {{#each row}}
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>No hay facturas por el momento :C</p>
                        <a href="/cliente/addFactura/{{cliente}}">Crea Uno!</a>
                    </div>
                </div>
                {{/each}}
                {{/each}}
            </tbody>
        </table>



    </div>
</div>