<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Generar Pedido</title>
  <link rel="stylesheet" href="/img/styles/pedido.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
  <style>
    .flex-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
    }
    #buscarProducto {
      max-width: 300px;
      margin-top: 10px;
    }
  </style>
</head>
<body>

  <div class="container p-4">
    <div class="container2 mt-4 p-3 mb-4 bg-body rounded" style="margin-left: auto; margin-right: auto;">
      <div class="flex-container">
        <span class="text" tabindex="0" data-placement="top" title="Volver" style="display: inline-block">
          <a class="btn btn-outline-success" href="/cliente/listFactura/{{row}}">
            <span class="icon text-dark-50">
              <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text"></span>
          </a>
        </span>
        <h3 style="text-align: center; flex-grow: 1;">Generar Pedido</h3>
      </div>
      
      <input type="text" id="buscarProducto" class="form-control" placeholder="Buscar producto..." />

      <form action="/cliente/addFactura/{{row}}" method="POST">
        <br>
        <table class="table">
          <thead>
            <tr class="text-center">
              <th>PRODUCTO</th>
              <th>DISPONIBLE</th>
              <th>PRECIO</th>
              <th>CANTIDAD</th>
            </tr>
          </thead>
          <tbody id="tablaBody">
            {{#each productosList}}
            <tr class="text-center">
              <td>
                <input type="text" readonly="readonly" name="nombreProducto" value="{{nombre}}" />
              </td>
              <td>
                <input type="number" readonly="readonly" name="cantidadBD" value="{{cantidad}}" min="0" id="cantidadBD" />
              </td>
              <td>
                <input type="number" readonly="readonly" name="precio" value="{{precio}}" min="0" />
              </td>
              <td>
                <input type="number" name="cantidadProductosSeleccionados" value="" min="0" oninput="validarCantidad()"
                  id="cantidadProductosSeleccionados" />
                <span class="nombreMensaje"></span>
              </td>
              <td>
                <input type="checkbox" name="productosSeleccionados" style="display:none;" value="{{id_producto}}" checked />
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        <div class="btn-container">
          <input class="btn btn-success btn-lg" type="submit" value="Enviar" id="guardarBtn" />
        </div>
      </form>
    </div>
  </div>

  <script>
    const guardarBtn = document.getElementById('guardarBtn');
    document.addEventListener('DOMContentLoaded', function () {
      guardarBtn.disabled = true;
    });

    async function validarCantidad() {
      const cantidadBDs = document.querySelectorAll('[name="cantidadBD"]');
      const cantidadProductosSeleccionadosList = document.querySelectorAll('[name="cantidadProductosSeleccionados"]');
      const nombreMensajes = document.querySelectorAll('.nombreMensaje');

      let allValid = true;

      for (let i = 0; i < cantidadBDs.length; i++) {
        if (!cantidadProductosSeleccionadosList[i].value.trim()) {
          nombreMensajes[i].innerText = '';
          continue;
        }

        const cantidadBD = parseInt(cantidadBDs[i].value);
        const cantidadProductosSeleccionados = parseInt(cantidadProductosSeleccionadosList[i].value);

        if (cantidadBD < cantidadProductosSeleccionados) {
          nombreMensajes[i].innerText = 'Se ha excedido';
          allValid = false;
        } else {
          nombreMensajes[i].innerText = 'Todo OK';
        }
      }

      habilitarODeshabilitarBotonGuardar(allValid);
    }

    function habilitarODeshabilitarBotonGuardar(allValid) {
      let allOk = true;
      const nombreMensajes = document.querySelectorAll('.nombreMensaje');
      for (let i = 0; i < nombreMensajes.length; i++) {
        if (nombreMensajes[i].innerText !== 'Todo OK' && nombreMensajes[i].innerText !== '') {
          allOk = false;
          break;
        }
      }
      guardarBtn.disabled = !allOk || !allValid;
    }

    // Llama a las funciones de validación al cargar la página
    window.onload = function () {
      const cantidadProductosSeleccionados = document.querySelectorAll('[name="cantidadProductosSeleccionados"]');
      for (let i = 0; i < cantidadProductosSeleccionados.length; i++) {
        cantidadProductosSeleccionados[i].addEventListener('input', validarCantidad);
      }
    };

    // Filtro de búsqueda de productos
    document.getElementById('buscarProducto').addEventListener('input', function() {
      const filter = this.value.toLowerCase();
      const rows = document.querySelectorAll('#tablaBody tr');

      rows.forEach(row => {
        const producto = row.querySelector('input[name="nombreProducto"]').value.toLowerCase();
        if (producto.includes(filter)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    });
  </script>

</body>
</html>
