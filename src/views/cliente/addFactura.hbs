<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Generar Pedido</title>
  <link rel="stylesheet" href="/img/styles/pedido.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
  <style>
    .form-control {
      border-radius: 5px; /* Redondear los bordes */
      width: 100%; /* Establecer el ancho al 100% */
      box-sizing: border-box; /* Incluir el ancho del borde en el tamaño total */
    }
    .dropbtn {
    background-color: #3498db;
    color: white;
    padding: 10px;
    font-size: 16px;
    border: none;
    cursor: pointer;
}

/* Estilos para el contenedor del menú desplegable */
.dropdown {
    position: relative;
    display: inline-block;
}

/* Estilos para el contenido del menú desplegable */
.dropdown-content {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    z-index: 1;
}

/* Estilos para las opciones del menú desplegable */
.dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}

/* Estilos para las opciones del menú desplegable al pasar el mouse sobre ellas */
.dropdown-content a:hover {
    background-color: #f1f1f1;
}

/* Estilos para el buscador */
.search-bar {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
}

/* Mostrar el menú desplegable cuando el botón se haga clic */
.dropdown:hover .dropdown-content {
    display: block;
}
  </style>
</head>
<body>

  <div class="container p-4">
    <div class="container2 mt-4 p-3 mb-4 bg-body rounded" style="margin-left: auto; margin-right: auto;">
      <span class="text" tabindex="0" data-placement="top" title="Volver" style="display: inline-block">
        <a class="btn btn-outline-success" href="/cliente/listFactura/{{row}}">
          <span class="icon text-dark-50">
            <i class="fas fa-arrow-left"></i>
          </span>
          <span class="text"></span>
        </a>
      </span>

      <br action="/cliente/addFactura/{{row}}" method="POST">
        <h3 style="text-align: center;">Generar Pedido</h3>
        <br>
        <div class="dropdown">
    <button class="dropbtn">Cliente</button>
    <div class="dropdown-content">
        <input type="text" placeholder="Buscar..." class="search-bar">
        <a href="#">Opción 1</a>
        <a href="#">Opción 2</a>
        <a href="#">Opción 3</a>
        <!-- Agrega más opciones aquí -->
    </div>
    <br>
</div>

        <input type="text" id="inputBusqueda" class="form-control" placeholder="Buscar producto..."  style="max-width: 300px;"/>
        <table class="table" id="tablaProductos">
          <thead>
            <tr class="text-center">
              <th>PRODUCTO</th>
              <th>DISPONIBLE</th>
              <th>PRECIO</th>
              <th>CANTIDAD</th>
            </tr>
          </thead>
          <tbody>
            {{#each productosList}}
            <tr class="text-center">
              <td>{{nombre}}</td>
              <td>{{cantidad}}</td>
              <td>{{precio}}</td>
              <td contenteditable="true" class="form-control" oninput="validarCantidad()"></td>
              <td style="display:none;">{{id_producto}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
        <div class="btn-container">
          <input class="btn btn-success btn-lg" type="submit" value="Enviar" id="guardarBtn" />
        </div>
      </form>
    </div>
  </div>

  <script>
    const guardarBtn = document.getElementById('guardarBtn');
    document.addEventListener('DOMContentLoaded', function () {
      guardarBtn.disabled = true;
    });

    async function validarCantidad() {
      const cantidadBDs = document.querySelectorAll('[name="cantidadBD"]');
      const cantidadProductosSeleccionadosList = document.querySelectorAll('[name="cantidadProductosSeleccionados"]');
      const nombreMensajes = document.querySelectorAll('.nombreMensaje');

      let allValid = true;

      for (let i = 0; i < cantidadBDs.length; i++) {
        if (!cantidadProductosSeleccionadosList[i].innerText.trim()) {
          nombreMensajes[i].innerText = '';
          continue;
        }

        const cantidadBD = parseInt(cantidadBDs[i].innerText);
        const cantidadProductosSeleccionados = parseInt(cantidadProductosSeleccionadosList[i].innerText);

        if (cantidadBD < cantidadProductosSeleccionados) {
          nombreMensajes[i].innerText = 'Se ha excedido';
          allValid = false;
        } else {
          nombreMensajes[i].innerText = 'Todo OK';
        }
      }

      habilitarODeshabilitarBotonGuardar(allValid);
    }

    function habilitarODeshabilitarBotonGuardar(allValid) {
      let allOk = true;
      const nombreMensajes = document.querySelectorAll('.nombreMensaje');
      for (let i = 0; i < nombreMensajes.length; i++) {
        if (nombreMensajes[i].innerText !== 'Todo OK' && nombreMensajes[i].innerText !== '') {
          allOk = false;
          break;
        }
      }
      guardarBtn.disabled = !allOk || !allValid;
    }

    // Llama a las funciones de validación al cargar la página
    window.onload = function () {
      // Agregar evento de escucha para el campo de búsqueda
      const inputBusqueda = document.getElementById('inputBusqueda');
      inputBusqueda.addEventListener('input', function() {
        const filter = this.value.toLowerCase();
        const rows = document.querySelectorAll('#tablaProductos tbody tr');

        rows.forEach(row => {
          const producto = row.querySelector('td:nth-child(1)').innerText.toLowerCase();
          if (producto.includes(filter)) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
      });
    };
  </script>

</body>
</html>
